<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <EditText
        android:id="@+id/et_user_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/logo"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="请输入账号" />

    <EditText
        android:id="@+id/et_user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_account"
        android:drawableLeft="@drawable/logo"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="请输入验证码" />

    <EditText
        android:id="@+id/et_verification_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_password"
        android:drawableLeft="@drawable/logo"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="请输入新密码" />


    <Button
        android:id="@+id/btn_finash_registered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_verification_code"
        android:layout_marginTop="30dp"
        android:text="完成"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@+id/btn_finash_registered"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本人已阅读并同意"
            android:textColor="@color/textDarkGrey" />

        <TextView
            android:id="@+id/tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册协议"
            android:textColor="@color/blue_sky" />
    </LinearLayout>


</RelativeLayout>