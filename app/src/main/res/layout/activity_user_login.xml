<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <EditText
        android:id="@+id/et_user_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/logo"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="请输入账号" />

    <EditText
        android:id="@+id/et_user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_account"
        android:drawableLeft="@drawable/logo"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/logo"
        android:gravity="center_vertical"
        android:text="请输入账号" />

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/et_user_password"
        android:layout_below="@+id/et_user_password"
        android:gravity="center_vertical"
        android:text="忘记密码？" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_forget_password"
        android:layout_marginTop="30dp"
        android:text="login"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/tv_new_user_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/blue_sky"
        android:text="新用户注册" />

</RelativeLayout>