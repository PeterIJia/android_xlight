        </LinearLayout>

        <Switch
            android:id="@+id/deviceSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableRight="@drawable/switch_selector"
            android:paddingRight="22dp"
            android:thumb="@null"
            android:track="@null" />

    </LinearLayout>

</LinearLayout>
