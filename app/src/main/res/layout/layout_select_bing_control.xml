<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="22.5dp"
    android:paddingRight="22.5dp"
    android:paddingTop="46dp" >

    <Button
        android:id="@+id/btn_choose_add_wifi_device"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="扫描设备添加（适用于初次绑定设备）"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_choose_scan_add_device"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginTop="12dip"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="扫描二维码添加"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
    <Button
        android:id="@+id/btn_choose_add_line_device"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginTop="12dip"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="输入口令添加"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginTop="12dip"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="取消"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>