<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/ModifyPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/ib_clear1"
            android:background="@null"
            android:hint="请输入原密码"
            android:drawableLeft="@drawable/icon_password"
            android:paddingLeft="16dp" />

        <ImageButton
            android:id="@+id/ib_clear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_delete" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/ModifyPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/ib_clear2"
            android:background="@null"
            android:hint="请输入密码"
            android:drawableLeft="@drawable/icon_password"
            android:paddingLeft="16dp" />

        <ImageButton
            android:id="@+id/ib_clear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_delete" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/ModifyPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/et_new_password_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/ib_clear3"
            android:background="@null"
            android:hint="请再次输入密码"
            android:drawableLeft="@drawable/icon_password"
            android:paddingLeft="16dp" />

        <ImageButton
            android:id="@+id/ib_clear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_delete" />
    </RelativeLayout>
</LinearLayout>